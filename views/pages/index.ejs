    <%- include('../partials/navbar') %>

    <main class="flex-shrink-0 mt-5 pt-4">
        <div class="container py-5">
            <div class="p-5 mb-4 rounded-3 bg-hero text-center">
                <h1 class="display-4 fw-bold text-gradient">Seven Knight Rebirth</h1>
                <p class="lead text-secondary">Database, Builds, Tier Lists, and Comprehensive Guides.</p>
                <hr class="my-4 border-secondary">
                <a class="btn btn-outline-warning btn-lg" href="#" role="button">Explore Tier List</a>
            </div>

            <div class="row align-items-md-stretch">
                <div class="col-md-4 mb-3">
                    <div class="h-100 p-4 text-white bg-card rounded-3 border-glow">
